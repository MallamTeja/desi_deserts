import { useState, useEffect } from "react";
import { useNavigate } from "react-router-dom";
import { toast } from "@/hooks/use-toast";

const BACKEND_URL = "http://localhost:3000";

const AdminDashboard = () => {
    const [adminName, setAdminName] = useState("");
    const [loading, setLoading] = useState(true);
    const navigate = useNavigate();

    useEffect(() => {
        const verifyToken = async () => {
            const token = localStorage.getItem("adminToken");
            if (!token) {
                navigate("/biryanidev");
                return;
            }

            try {
                const res = await fetch(`${BACKEND_URL}/api/admin/verify`, {
                    headers: { Authorization: `Bearer ${token}` },
                });
                const data = await res.json();

                if (!res.ok || !data.valid) {
                    localStorage.removeItem("adminToken");
                    localStorage.removeItem("adminName");
                    navigate("/biryanidev");
                    return;
                }

                setAdminName(data.name);
            } catch {
                toast({ title: "Session error", description: "Cannot reach server.", variant: "destructive" });
                navigate("/biryanidev");
            }
            setLoading(false);
        };

        verifyToken();
    }, [navigate]);

    const handleLogout = () => {
        localStorage.removeItem("adminToken");
        localStorage.removeItem("adminName");
        toast({ title: "Signed out" });
        navigate("/biryanidev");
    };

    if (loading) {
        return (
            <div className="min-h-screen bg-background flex items-center justify-center">
                <p className="text-muted-foreground animate-pulse">Verifying session...</p>
            </div>
        );
    }

    return (
        <div className="min-h-screen bg-background">
            {/* Admin Header */}
            <header className="sticky top-0 z-40 bg-primary text-primary-foreground border-b border-primary/20">
                <div className="container max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
                    <h1 className="font-display text-xl font-bold">Dessert Darbar ‚Äî Admin</h1>
                    <div className="flex items-center gap-4">
                        <span className="text-sm opacity-80 capitalize">{adminName}</span>
                        <button
                            onClick={handleLogout}
                            className="text-sm bg-primary-foreground/10 hover:bg-primary-foreground/20 px-3 py-1.5 rounded-lg transition-colors"
                        >
                            Sign Out
                        </button>
                    </div>
                </div>
            </header>

            {/* Dashboard Content ‚Äî Placeholder */}
            <main className="container max-w-5xl mx-auto px-4 py-12">
                <div className="bg-card border border-border rounded-2xl p-8 text-center space-y-4 shadow-sm">
                    <div className="w-20 h-20 mx-auto rounded-full bg-primary/10 flex items-center justify-center">
                        <span className="text-3xl">üçÆ</span>
                    </div>
                    <h2 className="font-display text-2xl font-bold text-foreground">
                        Welcome, <span className="capitalize">{adminName}</span>!
                    </h2>
                    <p className="text-muted-foreground max-w-md mx-auto">
                        Admin dashboard components coming soon. This is your management hub for Dessert Darbar.
                    </p>
                </div>
            </main>
        </div>
    );
};

export default AdminDashboard;
