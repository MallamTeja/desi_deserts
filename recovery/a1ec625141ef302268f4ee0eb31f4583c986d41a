import basundi from "@/assets/basundi.png";
import kadduKiKheer from "@/assets/kaddukhakheer.png";
import doubleKaMeetha from "@/assets/doublekameeta.png";

export const dessertImages: Record<string, string> = {
  "basundi": basundi,
  "kaddu-ki-kheer": kadduKiKheer,
  // Keep old keys as fallback in case DB hasn't been updated yet
  "khaddukakheer": kadduKiKheer,
  "double-ka-meetha": doubleKaMeetha,
  // Keep old keys as fallback in case DB hasn't been updated yet
  "double-kameta": doubleKaMeetha,
};

export const getDessertImage = (key: string): string => {
  return dessertImages[key] || "/placeholder.svg";
};
